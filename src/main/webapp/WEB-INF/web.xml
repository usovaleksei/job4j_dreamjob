<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         version="2.5"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>Archetype Created Web Application</display-name>
    <servlet>
        <servlet-name>PostServlet</servlet-name>
        <servlet-class>ru.job4j.dream.servlet.PostServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CandidateServlet</servlet-name>
        <servlet-class>ru.job4j.dream.servlet.CandidateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IndexServlet</servlet-name>
        <servlet-class>ru.job4j.dream.servlet.IndexServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DownloadServlet</servlet-name>
        <servlet-class>ru.job4j.dream.servlet.DownloadServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UploadServlet</servlet-name>
        <servlet-class>ru.job4j.dream.servlet.UploadServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PhotoUploadServlet</servlet-name>
        <servlet-class>ru.job4j.dream.servlet.PhotoUploadServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PhotoDeleteServlet</servlet-name>
        <servlet-class>ru.job4j.dream.servlet.PhotoDeleteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AuthServlet</servlet-name>
        <servlet-class>ru.job4j.dream.servlet.AuthServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegServlet</servlet-name>
        <servlet-class>ru.job4j.dream.servlet.RegServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GreetingServlet</servlet-name>
        <servlet-class>ru.job4j.dream.servlet.GreetingServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CitiesServlet</servlet-name>
        <servlet-class>ru.job4j.dream.servlet.CityServlet</servlet-class>
    </servlet>
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>ru.job4j.dream.filter.AuthFilter</filter-class>
    </filter>
    <filter>
        <filter-name>CORSFilter</filter-name>
        <filter-class>ru.job4j.dream.filter.CORSFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CORSFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet-mapping>
        <servlet-name>PostServlet</servlet-name>
        <url-pattern>/post/posts.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CandidateServlet</servlet-name>
        <url-pattern>/candidate/candidates.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IndexServlet</servlet-name>
        <url-pattern>/index.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DownloadServlet</servlet-name>
        <url-pattern>/download</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UploadServlet</servlet-name>
        <url-pattern>/upload</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PhotoUploadServlet</servlet-name>
        <url-pattern>/photoUpload</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PhotoDeleteServlet</servlet-name>
        <url-pattern>/photoDelete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AuthServlet</servlet-name>
        <url-pattern>/auth.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegServlet</servlet-name>
        <url-pattern>/reg.do</url-pattern>
    </servlet-mapping>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>*.do</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>EditPost</servlet-name>
        <jsp-file>/post/edit.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditPost</servlet-name>
        <url-pattern>/editpost.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>EditCandidate</servlet-name>
        <jsp-file>/candidate/edit.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditCandidate</servlet-name>
        <url-pattern>/editcandidate.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GreetingServlet</servlet-name>
        <url-pattern>/greet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CitiesServlet</servlet-name>
        <url-pattern>/cities</url-pattern>
    </servlet-mapping>
</web-app>
